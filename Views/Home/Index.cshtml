@model CreateIssueJira.ViewModels.Issue
@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"

<script type="text/javascript" src="~/lib/jquery/dist/jquery.js"></script>
<script type="text/javascript" src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script type="text/javascript" src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<script type="text/javascript" src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.js"></script>
<script type="text/javascript" src="~/lib/jquery/dist/jquery.js"></script>
<script type="text/javascript" src="~/javascript.js"></script>


<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h3 >Tworzenie zgłoszenia w jira</h3>
        <form method="POST" enctype="multipart/form-data">
            <div asp-vlidation-summary="ValidationSummary.ModelOnly"></div>

            <div class="form-group">
                <label asp-for="Summary">Podsumowanie</label>
                <input  asp-for="Summary" class="form-control"/>
                <span asp-validation-for="Summary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description">Opis</label>
                <textarea rows="7" asp-for="Description" class="form-control"> </textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reporter">Zgłaszający</label>
                <input asp-for="Reporter" class="form-control"/>
                <span asp-validation-for="Reporter" class="text-danger" ></span>
            </div>
            <div>
                <input type="file" id="files" name="files" multiple/>
                <span class="text-danger" id="Message"></span>
            </div>
            <div>
                <input id="submit" type="submit" value="Utwórz zgłoszenie" class="btn btn-success center-block"/>
            </div>
        </form>
    </div>

</div>
